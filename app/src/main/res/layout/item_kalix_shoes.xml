<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:gravity="center"
    android:background="@color/material_dynamic_neutral_variant60"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/shoes_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_logo" />

    <TextView
        android:id="@+id/shoes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/shoes_img"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/shoes_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoes_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/shoes_img"
        android:backgroundTint="@android:color/transparent"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="3"
        android:textSize="10sp"
        android:textColor="@color/white"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/tvItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:textSize="14sp"
        android:visibility="visible"
        android:textColor="@color/white"
        tools:text="1$" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shoes_des"
        android:layout_alignParentEnd="true"
        android:text="Buy"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>
